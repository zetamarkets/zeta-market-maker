{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "lib": ["es2020"],
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["**/node_modules/**/*"],
    "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs"
    }
  }